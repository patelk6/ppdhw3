<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kishan.homework3.MainMenu">

    <Button
        android:id="@+id/beginAdventure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/begin_adventure"
        android:layout_marginLeft="118dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="406dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mainMenuIntroduction"
        android:layout_width="356dp"
        android:layout_height="58dp"
        android:text="@string/welcomeText"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/nameInput"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="78dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteY="182dp"
        android:layout_marginLeft="153dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <RadioGroup
        android:layout_width="174dp"
        android:layout_height="75dp"
        android:layout_marginLeft="105dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/nameInput"
        android:id="@+id/genderSelector">

        <RadioButton
            android:id="@+id/maleGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/maleButton" />

        <RadioButton
            android:id="@+id/femaleGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/femaleButton" />
    </RadioGroup>

</android.support.constraint.ConstraintLayout>
